# ======================================
# MindMap AI - Environment Configuration
# ======================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS configuration)
# Local: http://localhost:5173
# Production: https://your-frontend-domain.run.app
FRONTEND_URL=http://localhost:5173
FRONTEND_PORT=5173

# Backend API URL (for frontend to connect)
# Local: http://localhost:5000
# Production: https://your-backend-domain.run.app
BACKEND_URL=http://localhost:5000
BACKEND_PORT=5000

# Google Gemini API Key
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Connection String
# Local: mongodb://localhost:27017/MindMapAI
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/MindMapAI
MONGODB_URI=mongodb://localhost:27017/MindMapAI

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=30d
